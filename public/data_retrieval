<?php

// Define the categories
$categories = array(
    "academic&professional",
    "business",
    "cultural",
    "engineering",
    "faith-based",
    "performance arts",
    "recreational",
    "service",
    "social justice",
    "special interests"
);

// Function to display the category column
function displayCategory($category) {
    global $categories;

    // Check if the specified category exists
    if (in_array($category, $categories)) {
        // Display the column titled "Category" with the specified category
        echo "<table border='1'>";
        echo "<tr><th>Category</th></tr>";
        echo "<tr><td>{$category}</td></tr>";
        echo "</table>";
    } else {
        // If the specified category does not exist, display an error message
        echo "Error: Invalid category.";
    }
}

// Example usage: specify the category you want to display
$categoryToDisplay = "business";
displayCategory($categoryToDisplay);

?>
