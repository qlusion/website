<?php
$servername = "localhost"; 
$username = "root"; 
$password = ""; 
$database = "spread_sheet_original_clubs"; // Change this to your database name. Accurate db name

// Create connection
$conn = new mysqli($servername, $username, $password, $database);

// Check connection
if ($conn->connect_error) {
    die("Connection failed: " . $conn->connect_error);
}

echo "Connected successfully<br>";


$table = "your_table_name"; // Change this to your table name

$sql = "SELECT * FROM $table";
$result = $conn->query($sql);

if ($result->num_rows > 0) {
    // Output data of each row
    while($row = $result->fetch_assoc()) {
        echo "ID: " . $row["id"]. " - Name: " . $row["name"]. " - Category: " . $row["category"]. "<br>";
        // add more fields as required from the db, this is just to establish connection
    }
} else {
    echo "0 results";
}

// Example of extracting certain features like categories
$categories = array();

// Fetching unique categories from the database
$sql_categories = "SELECT DISTINCT category FROM $table";
$result_categories = $conn->query($sql_categories);

if ($result_categories->num_rows > 0) {
    while($row = $result_categories->fetch_assoc()) {
        $categories[] = $row['category'];
    }
}

echo "<br>The filtered categories:<br>";
foreach ($categories as $category) {
    echo $category . "<br>";
}

$conn->close();

?>
