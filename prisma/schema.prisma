generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model User {
  id          String      @id @default(cuid())
  email       String      @unique
  name        String?
  role        Role        @default(user)
  adminEvents ClubEvent[]
}

model ClubEvent {
  id         String       @id @default(cuid())
  clubName   String
  categoryId String
  category   ClubCategory @relation(fields: [categoryId], references: [id])
  social     String
  day        String
  time       String
  info       String
  location   String
  contact    String
  picture    String
  adminUsers User[]
}

model ClubCategory {
  id         String      @id @default(cuid())
  name       String
  clubEvents ClubEvent[]
}

enum Role {
  admin
  clubAdmin
  user
}
